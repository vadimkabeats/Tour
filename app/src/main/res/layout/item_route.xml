<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_margin8"
    card_view:cardCornerRadius="@dimen/layout_margin8"
    card_view:cardElevation="2dp">

    <LinearLayout
        android:padding="@dimen/padding12"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_route_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name_route"
            android:textSize="@dimen/text18"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_route_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:textSize="@dimen/text14"
            android:layout_marginTop="@dimen/marginTop4"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
